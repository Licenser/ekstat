{erl_opts, [
    warnings_as_errors,
    debug_info
]}.
{port_env, [
    {"CFLAGS", "$CFLAGS -fPIC"},
    {"CXXFLAGS", "$CXXFLAGS -fPIC"},
    {"DRV_CFLAGS", "$DRV_CFLAGS -Werror"},
    {"DRV_LDFLAGS", "$DRV_LDFLAGS -lcmdutils -lkstat"}
]}.

{plugins,
  [{pc, {git, "git@github.com:blt/port_compiler.git", {branch, "master"}}}]}.

{provider_hooks,
  [{post,
    [{compile, {pc, compile}},
     {clean, {pc, clean}}]}]}]}.
